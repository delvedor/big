{
  "name": "big-presentation",
  "version": "3.5.0",
  "description": "a presentation system for busy messy hackers",
  "main": "template/big.js",
  "scripts": {
    "test": "semistandard && stylelint template/big.css && flow",
    "doc": "documentation build template/big.js -o docs/api.md -f md --access=public",
    "release": "standard-version",
    "fix": "semistandard --fix && prettier --write --single-quote \"**/*.js\""
  },
  "bin": {
    "big-presentation": "cli.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tmcw/big.git"
  },
  "keywords": [
    "big",
    "presentation",
    "system",
    "slides"
  ],
  "author": "Tom MacWright",
  "contributors": [
    {
      "name": "Tomas Della Vedova",
      "url": "http://delved.org"
    }
  ],
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/tmcw/big/issues"
  },
  "homepage": "https://github.com/tmcw/big#readme",
  "devDependencies": {
    "cz-conventional-changelog": "^2.0.0",
    "documentation": "^8.0.0",
    "flow-bin": "^0.75.0",
    "prettier": "^1.1.0",
    "semistandard": "^12.0.1",
    "standard-version": "^4.0.0",
    "stylelint": "^9.2.0",
    "stylelint-config-standard": "^18.2.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard"
  },
  "semistandard": {
    "ignore": [
      "/template/highlight.js"
    ]
  },
  "dependencies": {
    "chokidar": "^2.0.4",
    "commist": "^1.0.0",
    "cpy": "^7.0.0",
    "decktape": "^2.8.6",
    "ecstatic": "^3.1.1",
    "help-me": "^1.1.0",
    "inliner": "^1.12.1",
    "ip": "^1.1.5",
    "marked": "^0.4.0",
    "minimist": "^1.2.0",
    "mustache": "^2.3.0"
  }
}
